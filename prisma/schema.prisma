// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Contacts{
  id Int @id @default(autoincrement())
  phone String
  email String
  physicalLocation String  
}

model GeneralSettings{
  id Int @id @default(autoincrement())
  itemsPerPage Int
  featuredSort String
}

model Item {
  id          String    @id @default(uuid())
  title       String    @unique
  price       Float
  stock       Int
  category    String
  description String?
  pictures    Picture[] @relation("itemPictures")
  thumbnailId String?  @unique
  thumbnail   Picture?  @relation("thumbnail", fields: [thumbnailId], references: [id])
  createdAt DateTime @default(now())
  favouritedByUsers  Favourites[]
  soldItems SoldItem[]
}

model Picture {
  id          String @id @default(uuid())
  name        String @unique
  width       Int
  height      Int
  itemId      String?
  item        Item?  @relation("itemPictures", fields: [itemId], references: [id])
  itemThumbnailId Item? @relation("thumbnail")
}

model Favourites{
  id String @id @default(uuid())
  itemId String?
  item  Item?  @relation(fields: [itemId], references: [id])
  userId String?
  user User? @relation(fields: [userId], references: [id])
}

model User {
  id  String @id @default(uuid())
  name  String
  email String  @unique
  image String?
  favouriteItems  Favourites[]
  role  Role  @default(USER)
}

enum Role {
  USER
  ADMIN
}

model SoldItem{
  id String @id @default(uuid())
  name String
  quantity Int?
  amountSubtotal Float
  amountTotal Float
  amountDiscount Float
  amountTax Float
  unitAmount Float
  createdAt DateTime @default(now())
  transactionId String
  transaction Transaction @relation(fields: [transactionId], references: [id])
  itemId String
  item Item @relation(fields: [itemId], references: [id])
}

model Transaction{
  id String @id @default(uuid())
  paymentStatus String
  status String?
  currency String?
  amountSubtotal Float?
  amountTotal Float?
  createdAt DateTime @default(now())
  soldItems SoldItem[]
  customerId String
  customerDetails Customer @relation(fields: [customerId], references: [id])
}

model Address{
  id String @id @default(uuid())
  city String?
  country String?
  line1 String?
  line2 String?
  postal_code String?
  state String?
  customer Customer?
}

model Customer {
  id String @id @default(uuid())
  // name String
  firstname String
  lastname String
  email String @unique
  phone String?
  taxExempt String?
  createdAt DateTime @default(now())
  transactions Transaction[]
  addressId String @unique
  address Address @relation(fields: [addressId],references: [id])
}
