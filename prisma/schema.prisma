// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Item {
  id          String    @id @default(uuid())
  title       String    @unique
  price       Float
  stock       Int
  category    String
  description String?
  pictures    Picture[] @relation("itemPictures")
  thumbnailId String?  @unique
  thumbnail   Picture?  @relation("thumbnail", fields: [thumbnailId], references: [id])
}

model Picture {
  id          String @id @default(uuid())
  name        String @unique
  width       Int
  height      Int
  itemId      String
  item        Item   @relation("itemPictures", fields: [itemId], references: [id])
  itemThumbnailId Item? @relation("thumbnail")
 
}
