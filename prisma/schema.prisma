// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")

}

model Item {
  id          String    @id @default(uuid())
  title       String    @unique
  price       Float
  stock       Int
  category    String
  description String?
  pictures    Picture[] @relation("itemPictures")
  thumbnailId String?  @unique
  thumbnail   Picture?  @relation("thumbnail", fields: [thumbnailId], references: [id])
  createdAt DateTime @default(now())
  favouritedByUsers  Favourites[]
}

model Picture {
  id          String @id @default(uuid())
  name        String @unique
  width       Int
  height      Int
  itemId      String
  item        Item   @relation("itemPictures", fields: [itemId], references: [id])
  itemThumbnailId Item? @relation("thumbnail")
}

model Favourites{
  id String @id @default(uuid())
  itemId String
  item  Item  @relation(fields: [itemId], references: [id])
  userId String
  user User @relation(fields: [userId], references: [id])
}

model User {
  id  String @id @default(uuid())
  name  String
  email String  @unique
  image String?
  favouriteItems  Favourites[]
  role  Role  @default(USER)
}

enum Role {
  USER
  ADMIN
}